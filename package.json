{
  "name": "irte",
  "version": "1.0.0",
  "description": "Infrastructure Risk Trigger Engine - offline-first infrastructure diagnostics",
  "main": "src/index.js",
  "bin": {
    "irte": "bin/irte.js"
  },
  "type": "commonjs",
  "scripts": {
    "test": "node --test tests/unit/*.test.js",
    "start": "node bin/irte.js",
    "build:win": "pkg . --targets node20-win-x64 --output dist/irte.exe",
    "build:linux": "pkg . --targets node20-linux-x64 --output dist/irte-linux",
    "build:mac": "pkg . --targets node20-macos-x64 --output dist/irte-macos",
    "verify:e2e": "node scripts/verify-e2e.mjs"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js",
      "bin/*.js"
    ],
    "assets": [
      "README.md"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
